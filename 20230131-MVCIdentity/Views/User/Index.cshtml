@model UserIndexVM


<section class="vh-100" style="background-color: #9de2ff;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-md-9 col-lg-7 col-xl-5">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-4">
                        <div class="d-flex text-black">
                            <div class="flex-shrink-0">
                                <img src="@Model.imagePath" width="150" height="150" />

                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 class="mb-1">@Model.FirstName @Model.LastName</h5>
                                <p class="mb-2 pb-1" style="color: #2b2a2a;">@Model.job</p>
                                <p class="mb-2 pb-1" style="color: #2b2a2a;">@Model.email</p>
                                <p class="mb-2 pb-1" style="color: #2b2a2a;">@Model.Phone</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




<ul>
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">@Model.FirstName's Posts</h3>
            <div class="inner-sec">
                <!--left-->
                <div class="left-blog-info-w3layouts-agileits text-left">
                    <div class="row">
                        @foreach (var item in Model.Articles)
                        {
                            var tm = "#deleteModal" + item.Id;
                            var mid = "deleteModal" + item.Id;
                            <div class="col-lg-4 card">
                                <a href="single.html">
                                    <img src="~/web/images/7.jpg" class="card-img-top img-fluid" alt="">
                                </a>
                                <div class="card-body">
                                    <ul class="blog-icons my-4">
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i> @(((DateTime)item.CreationDate).ToString("dd-MM-yyyy"))
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fas fa-eye"></i> @item.ViewCount
                                            </a>
                                        </li>
                                    </ul>
                                    <h5 class="card-title" style="font-size:18px; max-height: 20px; overflow: hidden;">
                                        <a>@item.Title</a>
                                    </h5>
                                    <p class="card-text mb-3" style="font-size:18px; max-height: 28px; overflow: hidden;">@item.Content </p>
                                    <a href="/Blog/BlogDetails/@item.Id" class="btn btn-primary read-m">Read More</a>
                                    @if (Model.UserId== Model.currentId)
                                    {
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-primary">Update</a>
                                     <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="@tm">Delete</button>
                                    }
                                    
                                </div>
                            </div>
                            <div class="modal fade" id="@mid" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="deleteModalLabel" style="font-size:18px; max-height:20px; overflow:hidden;">@item.Title will be deleted!</h1>
                                            <button type="button" class="bi bi-x-square" data-dismiss="modal" aria-label="Close">X</button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                            <a asp-action="Delete" asp-controller="User" asp-route-id="@item.Id" class="btn btn-primary">Yes</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <!--//left-->
                </div>
            </div>
        </div>
    </section>
</ul>



