@using _20230131_MVCIdentity.Areas.Identity.Data
@model List<Article>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle">Blog Posts</h3>
			<div class="inner-sec">
				<!--left-->
				<div class="left-blog-info-w3layouts-agileits text-left">
					<div class="row">
						@foreach (var item in Model)
						{
							
						
						<div class="col-lg-4 card">
							<a href="single.html">
								<img src="~/web/images/7.jpg" class="card-img-top img-fluid" alt="">
							</a>
							<div class="card-body">
								<ul class="blog-icons my-4">
									<li>
										<a href="#">
											<i class="far fa-calendar-alt"></i> @(((DateTime)item.CreationDate).ToString("dd-MM-yyyy"))
										</a>
									</li>

									@foreach (var item2 in item.Categories)
									{
										<li>
											@item2.Name
										</li>
										<li class="mx-2">
											<a href="#">
												<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tags" viewBox="0 0 16 16">
													<path d="M3 2v4.586l7 7L14.586 9l-7-7H3zM2 2a1 1 0 0 1 1-1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 2 6.586V2z" />
													<path d="M5.5 5a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1zm0 1a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3zM1 7.086a1 1 0 0 0 .293.707L8.75 15.25l-.043.043a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 0 7.586V3a1 1 0 0 1 1-1v5.086z" />
												</svg> @item2.Id
										</li>
									}
									<li>
										<a href="#">
											<i class="fas fa-eye"></i> @item.ViewCount</a>
									</li>
								</ul>
								<h5 class="card-title">
									<a href="/Blog/BlogDetails/@item.Id">@item.Title</a>
								</h5>
								<p class="card-text mb-3">@item.Content/*.Substring(0,item.Content.Substring(0,30).LastIndexOf(" "))...*/ </p>
								<a href="/Blog/BlogDetails/@item.Id" class="btn btn-primary read-m">Read More</a>
							</div>
						</div>
						}
					</div>
					<!--//left-->
				</div>
			</div>
		</div>
	</section>




